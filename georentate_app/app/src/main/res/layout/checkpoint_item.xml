<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/checkpoint_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/checkpoint_item_background"
        android:layout_margin="5dp"
        android:elevation="4dp">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp">

        <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_place_black_24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorAccent"
        />

        <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/checkpoint_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkpoint name"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/checkpoint_item_pts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 pts"/>

            <TextView
                    android:id="@+id/checkpoint_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 km"
                    android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/checkpoint_item_info_arrow"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/arrowColorBlue"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>